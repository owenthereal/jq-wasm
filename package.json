{
  "name": "jq-wasm",
  "version": "1.1.0-jq-1.7.1",
  "description": "A high-performance jq wrapper using Emscripten and WebAssembly.",
  "main": "dist/index.js",
  "repository": "github:owenthereal/jq-wasm",
  "homepage": "https://github.com/owenthereal/jq-wasm#readme",
  "bugs": {
    "url": "https://github.com/owenthereal/jq-wasm/issues"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "JQ_BRANCH=$(curl -s https://api.github.com/repos/jqlang/jq/releases/latest | jq -r .tag_name) npm run build:jq",
    "build:debug": "BUILD_TYPE=debug npm run build",
    "build:master": "JQ_BRANCH=$(curl -s https://api.github.com/repos/jqlang/jq/commits/master | jq -r '.sha[:7]') npm run build:jq",
    "build:jq": "JQ_BRANCH=${JQ_BRANCH:-master} BUILD_TYPE=${BUILD_TYPE:-release} && echo \"Building jq ${JQ_BRANCH} ${BUILD_TYPE} build\" && docker build --build-arg JQ_BRANCH=${JQ_BRANCH} --build-arg BUILD_TYPE=${BUILD_TYPE} --output src/build . && tsc",
    "release": "JQ_BRANCH=$(curl -s https://api.github.com/repos/jqlang/jq/releases/latest | jq -r .tag_name) script/release",
    "release:master": "JQ_BRANCH=master script/release",
    "test": "jest",
    "lint": "eslint src/"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist/"
  ],
  "keywords": [
    "jq",
    "wasm",
    "emscripten",
    "webassembly",
    "typescript",
    "javascript"
  ],
  "author": "Owen Ou",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.2"
  }
}
